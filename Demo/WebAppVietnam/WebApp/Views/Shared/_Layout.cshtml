<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <link href="/css/styles.css" rel="stylesheet" />
    <script src="~/js/jquery-3.6.0.min.js"></script>
</head>
<body class=container-fluid>
    <ul>
        <li><a href="/dashboard">Dashboard</a></li>
        <li><a href="/dashboard/access">Access</a></li>
        <li><a href="/dashboard/role">Role</a></li>
        <li><a href="/dashboard/member">Member</a></li>
        <li><a href="/dashboard/image">Image</a></li>
        <li><a href="/dashboard/chart">Chart</a></li>
        @if (User.Identity.IsAuthenticated)
        {
            <li><a href="/auth/logout">Logout</a></li>
            <li><a href="/auth/change">Change password</a></li>
        }
        else
        {
            <li><a href="/auth/register">Register</a></li>
            <li><a href="/auth/login">Login</a></li>
            <li><a href="/auth/forgot">Forgot password</a></li>
        }
    </ul>
    <div>
        @RenderBody()
    </div>
</body>
</html>
