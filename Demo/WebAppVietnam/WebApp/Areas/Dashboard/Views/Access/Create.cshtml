@model Access
<form method="post">
    <div class="form-group">
        <label asp-for="AccessName">Name</label>
        <input type="text" asp-for="AccessName" />
    </div>
    <div class="form-group">
        <label asp-for="RoleId">Role</label>
        <select  asp-for="RoleId" asp-items="@ViewBag.roles" ></select>
    </div>
    <div class="form-group">
        <label asp-for="AccessUrl">Url</label>
        <input type="text" asp-for="AccessUrl" />
    </div>
    <div class="form-group">
        <button class="btn btn-secondary">Save Changes</button>
    </div>
</form> 