@model List<WebApp.Models.Result>
    <a class="btn btn-primary" href="result/create">Create</a>
    <a class="btn btn-secondary" href="result/insert">Insert</a>
    <table class="table table-bordered">
        <thead class="thead-dark">
            <tr>
                <th><button class="btn btn-danger">Delete</button></th>
                <th>Id</th>
                <th>Date</th>
                <th>Province</th>
                <th>Detail</th>
                <th>Edit</th>
                <th>Update</th>
                <th>Show</th>
                <th>Delete</th>
            </tr>
        </thead>
        <tbody>
            @foreach (WebApp.Models.Result item in Model)
            {
                <tr>
                    <td>
                        <input type="checkbox" name="id" value="@item.Id" />
                    </td>
                    <td>@item.Id</td>
                    <!-- mm: Minute, MM: Month -->
                    <td>@item.Date.ToString("dd/MM/yyyy")</td>
                    <td>@item.ProvinceId</td>
                    <td>
                        <a href="/result/detail3/@item.Id">Detail3</a>
                    </td>
                    <td><a href="/result/edit/@item.Id"><i class="fas fa-edit"></i></a></td>
                    <td><a href="/result/update/@item.Id"><i class="fas fa-user-edit"></i></a></td>
                    <td><a href="/result/show/@item.Id"><i class="fas fa-eye"></i></a></td>
                    <td><a href="/result/delete/@item.Id"><i class="fas fa-trash-alt"></i></a></td>
                </tr>
            }
        </tbody>
    </table>
