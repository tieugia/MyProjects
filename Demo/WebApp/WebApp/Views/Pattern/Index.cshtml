@model List<WebApp.Models.Pattern>
    <a href="pattern/create">Create</a>
    <table>
        <thead>
            <tr>
                <th>Id</th>
                <th>Show</th>
                <th>Add</th>
                <th>Edit</th>
                <th>Delete</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
            <tr>
                <td>@item.Id</td>
                <td>@Html.Raw(@item.Show)</td>
                <td>@Html.Raw(@item.Add)</td>
                <td>
                    <a href="/pattern/edit/@item.Id"><i class="fas fa-pen"></i></a>
                </td>
                <td>
                    <a href="/pattern/delete/@item.Id"><i class="fas fa-trash"></i></a>
                </td>
            </tr>
            }
        </tbody>
    </table>