@{ Layout = "_LayoutAuth"; }
@model RecoveryModel
<div class="card shadow-lg border-0 rounded-lg mt-5">
    <div class="card-header"><h3 class="text-center font-weight-light my-4">Password Recovery</h3></div>
    <div class="card-body">
        <div class="small mb-3 text-muted">Enter your new password.</div>
        <form method="post">
            <div class="form-group">
                <label class="small mb-1" asp-for="Password">Password</label>
                <input class="form-control py-4" asp-for="Password" type="password" aria-describedby="emailHelp" placeholder="Enter email address" />
            </div>
            <div class="form-group">
                <label class="small mb-1" >Confirm Password</label>
                <input class="form-control py-4" id="confirmPassword" type="password" aria-describedby="emailHelp" placeholder="Enter email address" />
            </div>
            <div class="form-group d-flex align-items-center justify-content-between mt-4 mb-0">
                <a class="small" href="/auth/login">Return to login</a>
                <a class="btn btn-primary">Reset Password</a>
            </div>
        </form>
    </div>
    <div class="card-footer text-center">
        <div class="small"><a href="/auth/register">Need an account? Sign up!</a></div>
    </div>
</div>