@model List<WebApp.Models.Province>
    <a href="province/create" class="btn btn-primary">Create</a>
@TempData["msg"]
    <table class="table table-bordered table-hover">
        <thead class="table-dark">
            <tr>
                <th>Id</th>
                <th>Area</th>
                <th>Name</th>
                <th>Pattern</th>
                <th>Edit</th>
                <th>Add result</th>
                <th>Delete</th>
            </tr>
        </thead>
        <tbody>
            @foreach (WebApp.Models.Province item in Model)
            {
                <tr>
                    <td>@item.Id</td>
                    <td>@item.AreaName</td>
                    <td>@item.Name</td>
                    <td>@item.PatternId</td>
                    <td>
                        <a href="province/edit/@item.Id"><i class="fas fa-pen"></i></a>
                    </td>
                    <td>
                        <a href="/result/add/@item.Id">Add result</a>
                    </td>
                    <td>
                        <a href="province/delete"><i class="fas fa-trash"></i></a>
                    </td>
                </tr>
            }
        </tbody>
    </table>